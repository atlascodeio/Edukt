<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>

        <!-- Color tint widget general appcompat -->
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorControlNormal</item>

        <!-- Status bar color -->
        <item name="colorPrimaryDark">@color/app_bg_statusbar</item>
        <item name="android:textColorHint">@color/hint</item>

    </style>
    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>
    <!-- Navigation Drawer styling -->
    <style name="NavDrawerItemSelected" parent="AppTheme">
        <item name="android:activatedBackgroundIndicator">@drawable/activated_background</item>
    </style>

    <!-- style for the AppCompatEdittext -->
    <style name="EditText" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/text_color_main</item>
    </style>



</resources>



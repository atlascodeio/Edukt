<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.androidhive"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="8" />

    <!-- Allow to connect with internet -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/label_login"
        android:theme="@style/Edukt" >
        <activity
            android:name="com.example.androidhive.DashboardActivity"
            android:label="@string/label_dashboard"
            android:windowSoftInputMode="stateHidden" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Login Activity -->
        <activity
            android:name="com.example.androidhive.LoginActivity"
            android:label="@string/label_login"
            android:windowSoftInputMode="stateHidden" >
        </activity>

        <!-- Register Activity -->
        <activity
            android:name="com.example.androidhive.RegisterActivity"
            android:label="@string/label_register"
            android:windowSoftInputMode="stateHidden" />
    </application>

</manifest>